<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false"
    android:zAdjustment="top">
    <alpha
        android:duration="@integer/mz_config_wallpaperAnimTime"
        android:fromAlpha="1.0"
        android:interpolator="@interpolator/mz_close_exit_alpha_wallpaper"
        android:toAlpha="0.0" />
    <scale
        android:duration="@integer/mz_config_wallpaperAnimTime"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:interpolator="@interpolator/mz_close_exit_scale_wallpaper"
        android:pivotX="50.0%p"
        android:pivotY="50.0%p"
        android:toXScale="0.0"
        android:toYScale="0.0" />
</set>