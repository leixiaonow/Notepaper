<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tag_item_title_left_margin"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:minHeight="?android:listPreferredItemHeightSmall"
        android:singleLine="true"
        android:text="@string/all_tag"
        android:textColor="@color/tag_text_color"
        android:textSize="@dimen/tag_list_text_size" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mz_drawer_list_divider_light" />
</LinearLayout>