<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mc_galleryflow_ablum_background"
    android:foreground="@color/mc_galleryflow_album_foreground">

    <ImageView
        android:id="@id/mc_galleryflow_album_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@id/mc_galleryflow_album_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/mc_galleryflow_ablum_title_bg"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/mc_galleryflow_album_title_padding_bottom"
        android:shadowColor="@color/mc_galleryflow_album_title_shadow_color"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0"
        android:textColor="@color/mc_galleryflow_album_title_color"
        android:textSize="@dimen/mc_galleryflow_album_title_size" />
</FrameLayout>