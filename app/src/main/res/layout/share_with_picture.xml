<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="16.0dip">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingRight="16.0dip"
            android:src="@drawable/mz_ic_popup_share" />

        <TextView
            android:id="@id/pic_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/share_pic"
            android:textColor="#ff32a5e7"
            android:textSize="18.0sp" />

        <ImageView
            android:id="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/line" />

        <TextView
            android:id="@id/old_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/share_original"
            android:textColor="@android:color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <com.meizu.widget.LimitedHeightScrollView
        android:id="@id/resolver_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mz_resolve_grid_bottom"
        android:layout_marginLeft="@dimen/mz_resolve_grid_left"
        android:layout_marginRight="@dimen/mz_resolve_grid_right"
        android:fillViewport="true"
        android:scrollbars="vertical" />
</LinearLayout>