<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/mc_select_box" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/mz_picker_box_selected" android:scaleType="fitXY" />
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/mc_column_parent" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingStart="@dimen/mc_picker_padding_left" android:paddingEnd="@dimen/mc_picker_padding_right">
        <FrameLayout android:id="@id/mc_column1Layout" android:layout_width="@dimen/mc_picker_month_column_width" android:layout_height="fill_parent">
            <com.meizu.common.widget.ScrollTextView android:id="@id/mc_scroll1" android:layout_width="@dimen/mc_picker_month_scroll_width" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/mc_picker_text_size" android:textColor="@color/mc_picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/mc_scroll1_text" android:layout_width="@dimen/mc_picker_month_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
        <ImageView android:id="@id/mc_divider_bar1" android:visibility="gone" android:layout_width="1.0px" android:layout_height="fill_parent" />
        <FrameLayout android:id="@id/mc_column2Layout" android:layout_width="@dimen/mc_picker_day_column_width" android:layout_height="fill_parent">
            <com.meizu.common.widget.ScrollTextView android:layout_gravity="right" android:id="@id/mc_scroll2" android:layout_width="@dimen/mc_picker_day_scroll_width" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/mc_picker_text_size" android:textColor="@color/mc_picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/mc_scroll2_text" android:layout_width="@dimen/mc_picker_day_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
        <ImageView android:id="@id/mc_divider_bar2" android:visibility="gone" android:layout_width="0.0px" android:layout_height="fill_parent" />
        <FrameLayout android:id="@id/mc_column3Layout" android:layout_width="@dimen/mc_picker_year_column_width" android:layout_height="fill_parent">
            <com.meizu.common.widget.ScrollTextView android:id="@id/mc_scroll3" android:layout_width="@dimen/mc_picker_year_scroll_width" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/mc_picker_text_size" android:textColor="@color/mc_picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/mc_scroll3_text" android:layout_width="@dimen/mc_picker_year_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
    </LinearLayout>
