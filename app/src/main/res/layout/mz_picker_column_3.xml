<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.DeviceDefault.Light.MzPickerLayout">

    <ImageView
        android:id="@id/mz_select_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/mz_picker_box_selected" />

    <LinearLayout
        android:id="@id/mz_column_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mz_picker_padding_left"
        android:paddingRight="@dimen/mz_picker_padding_right">

        <FrameLayout
            android:id="@id/mz_column1Layout"
            android:layout_width="@dimen/mz_picker_column_width"
            android:layout_height="@dimen/mz_picker_height"
            android:layout_weight="0.0">

            <com.meizu.widget.ScrollTextView
                android:id="@id/mz_scroll1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@id/mz_scroll1_text"
                android:layout_width="@dimen/mz_picker_text_width"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/mz_picker_column_3_text_1_margin_right"
                android:gravity="center"
                android:textColor="@color/mz_picker_text_color"
                android:textSize="@dimen/mz_picker_text_size" />
        </FrameLayout>

        <ImageView
            android:id="@id/mz_divider_bar1"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@id/mz_column2Layout"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/mz_picker_height"
            android:layout_weight="1.0">

            <com.meizu.widget.ScrollTextView
                android:id="@id/mz_scroll2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@id/mz_scroll2_text"
                android:layout_width="@dimen/mz_picker_text_width"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/mz_picker_column_3_text_2_margin_right"
                android:gravity="center"
                android:textColor="@color/mz_picker_text_color"
                android:textSize="@dimen/mz_picker_text_size" />
        </FrameLayout>

        <ImageView
            android:id="@id/mz_divider_bar2"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@id/mz_column3Layout"
            android:layout_width="@dimen/mz_picker_column_width"
            android:layout_height="@dimen/mz_picker_height"
            android:layout_weight="0.0">

            <com.meizu.widget.ScrollTextView
                android:id="@id/mz_scroll3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@id/mz_scroll3_text"
                android:layout_width="@dimen/mz_picker_text_width"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/mz_picker_column_3_text_3_margin_right"
                android:gravity="center"
                android:textColor="@color/mz_picker_text_color"
                android:textSize="@dimen/mz_picker_text_size" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>