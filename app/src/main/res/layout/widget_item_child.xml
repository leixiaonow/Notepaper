<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widget_check_right_margin"
        android:layout_marginTop="@dimen/widget_check_top_margin"
        android:src="@null"
        android:visibility="gone" />

    <TextView
        android:id="@id/text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:autoLink="all"
        android:background="@null"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:hint="@null"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/widget_text_line_space"
        android:linksClickable="false"
        android:longClickable="false"
        android:maxLines="15"
        android:textColor="#ff333333"
        android:textSize="@dimen/widget_text_font_size" />
</LinearLayout>