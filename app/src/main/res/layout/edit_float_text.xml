<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/editParent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/float_text_margin"
    android:paddingRight="@dimen/float_text_margin"
    android:tag="text">

    <com.meizu.flyme.notepaper.widget.CheckImageView
        android:id="@id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/float_text_right_margin"
        android:minWidth="0.0dip"
        android:src="@null"
        android:visibility="gone" />

    <EditText
        android:id="@id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:autoLink="all"
        android:background="@null"
        android:editable="true"
        android:focusable="true"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/float_text_line_space"
        android:linksClickable="true"
        android:maxLength="10000"
        android:minLines="1"
        android:paddingBottom="@dimen/float_text_bottom_margin"
        android:paddingTop="0.0dip"
        android:textColor="#ff000000"
        android:textColorHint="@color/common_grey_color"
        android:textSize="@dimen/float_text_font" />

    <com.meizu.flyme.notepaper.widget.DeleteImageView
        android:id="@id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="0.0dip"
        android:src="@drawable/mz_ic_delete"
        android:visibility="gone" />
</LinearLayout>